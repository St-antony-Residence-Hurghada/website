extends ../_skeleton

include ../components/posts

block page
	include ../sections/_header-classic

	//Intro
	section.section.section-lg.section-intro
		.container
			.row.justify-content-center
				.col-xl-8.text-center
					h1.font-weight-bold.text-primary.wow.fadeInUp(data-wow-delay=".1s") Loving God, loving others and serving the world
					p.wow.fadeInUp(data-wow-delay=".2s").text-sm Welcome to Rise church, your #1 place to praise the Lord.


	//Welcome
	section.section.section-lg.bg-default
		.container
			.row.justify-content-center
				.col-xl-8.col-lg-10
					.pre-title.wow.fadeInLeft(data-wow-delay=".1s") Welcome to Rise Church
					h2.wow.fadeInRight(data-wow-delay=".2s") Sharing the God’s love with everyone
					p.text-sm.wow.fadeInUp(data-wow-delay=".3s") Our mission is helping people find their way back to God. We accomplish this by reaching people far from God, restoring God’s dream for the world, and reproducing this mission in others. There are three key relationships that help you develop a growing relationship with Jesus.
					a(href="about-us.html" data-wow-delay=".3s").shadow.btn.btn-icon.btn-icon-right.btn-secondary.btn-svg.offset-xl-55.wow.fadeInUp
						span.svg-icon
							svg(xmlns='http://www.w3.org/2000/svg' width='18' height='10' viewbox='0 0 18 10' fill='#fff')
								path(d='M13 10V6H0V4H13V0L18 5L13 10Z' fill='')
						span More about us

	//Welcome
	section.section.section-lg.bg-default
		.container
			.row.row-30.align-items-center
				.col-lg-6.p-xl-0.wow.fadeInLeft
					+img(require("../../scss/custom/images/home-2-660x495.jpg"))
				.col-lg-6.inset-left-110
					.pre-title.wow.fadeInRight(data-wow-delay=".1s") Our Community
					h2.wow.fadeInRight(data-wow-delay=".2s") Sharing the God’s love with everyone
					p.wow.fadeInRight(data-wow-delay=".3s") We experience biblical community through small groups. We contribute our time, talents, and resources to further the Mission of Jesus in our communities and the world.
					a(href="#" data-wow-delay=".3s").shadow.btn.btn-icon.btn-icon-right.btn-primary.btn-svg.offset-xl-50.wow.fadeInUp
						span.svg-icon
							svg(xmlns='http://www.w3.org/2000/svg' width='18' height='10' viewbox='0 0 18 10' fill='#fff')
								path(d='M13 10V6H0V4H13V0L18 5L13 10Z' fill='')
						span Read more


	//Locations
	section.section.section-lg.bg-default
		.container
			.pre-title.text-center.wow.fadeInUp(data-wow-delay=".1s") Where to find us
			h2.wow.fadeInUp(data-wow-delay=".2s").text-center Our Churches
			.row.row-narrow-50.row-40.row-xl
				.col-lg-6.wow.fadeInUp(data-wow-delay=".3s")
					.thumbnail-classic
						a(href="#").thumbnail-classic__media
								+img(require("../../scss/custom/images/home-3-610x458.jpg"))
						h3: a(href="#") Rise in New York
						a.location(href="#")
							span.icon.mdi-map-marker.mdi
							| 178 West 27th Street New York, NY 10012
				.col-lg-6.wow.fadeInUp(data-wow-delay=".3s")
					.thumbnail-classic
						a(href="#").thumbnail-classic__media
							+img(require("../../scss/custom/images/home-4-610x458.jpg"))
						h3: a(href="#") Rise in Florida
						a.location(href="#")
							span.icon.mdi-map-marker.mdi
							| 38 Depot Court Port Orange, FL 32127



	section.section.section-vide.section-lg.video-wrap.vide(data-vide-bg="video/video-1")
		.container.text-center.context-dark
			.h1 Attend the next church event
			p.text-sm See you at the sunday sermon

	include ../sections/_footer-classic
